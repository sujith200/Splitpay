<script> 
let cart = {}; 
function addToCart(name, price) { 
if (!cart[name]) { 
cart[name] = { qty: 0, price: price }; 
} 
cart[name].qty++; 
updateCartDisplay(); 
} 
function removeFromCart(name, price) { 
if (cart[name]) { 
cart[name].qty--; 
if (cart[name].qty <= 0) { 
delete cart[name]; 
} 
updateCartDisplay(); 
} 
} 
13 
function updateCartDisplay() { 
let cartCount = 0; 
let cartTotal = 0; 
let cartListHTML = ""; 
for (let item in cart) { 
cartCount += cart[item].qty; 
cartTotal += cart[item].qty * cart[item].price; 
cartListHTML += `‚Ä¢ ${cart[item].qty} √ó ${item}<br>`; 
} 
document.getElementById("cart-count").innerText = cartCount; 
document.getElementById("cart-total").innerText = cartTotal; 
document.getElementById("cart-items").innerHTML = 
cartCount === 0 ? "<em>No items yet</em>" : cartListHTML; 
document.getElementById("payment-btn").style.display = 
cartCount > 0 ? "block" : "none"; 
} 
function goToPayment() { 
window.location.href = "payment.html"; 
} 
</script> 
